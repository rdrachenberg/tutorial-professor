<main>
    <h1 class="text-center">Courses</h1>
    <section>
        {{#if loggedIn}}
            <a href="/course/create" class="btn btn-warning ">Create Course</a>
        {{else }}
            <a href="/" class="btn btn-warning ">Refresh</a>
        {{/if}}

        <form class="search float-right">
            <label>Search: </label>
            <input type="text">
            <input type="submit" class="btn btn-info" value="Search">
        </form>
    </section>
    {{#if loggedIn}}
    {{#if courses}}
    <div class="container mt-3">
        <div class="row ">
            <div class="card-deck d-flex justify-content-center">
                {{#each courses}}
                <div class="card mb-4">
                    <img class="card-img-top"
                        src="{{imageUrl}}"
                        alt="Card image cap" width="400">
                    <div class="card-body">
                        <h4 class="card-title">{{title}}</h4>
                    </div>
                    <div class="card-footer">
                        <a href="/details/{{_id}}"><button type="button" class="btn btn-info">Details</button></a>
                        <small class="float-right">Date...</small>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    {{else}}
        <h3 class="text-center">No courses...</h3>
    {{/if}}
    {{else}}
        {{#if courses}}
        <div class="container mt-3">
            <div class="row ">
                <div class="card-deck d-flex justify-content-center">
                    {{#each courses}}
                    <div class="card mb-4">
                        <img class="card-img-top" src="{{imageUrl}}" alt="Card image cap" width="400">
                        <div class="card-body">
                            <h4 class="card-title">{{title}}</h4>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{else}}
            <h3 class="text-center">No courses...</h3>
        {{/if}}
    {{/if}}
</main>