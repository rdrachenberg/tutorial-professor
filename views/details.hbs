<main>
    <div class="container">
        <h1 class="my-4">{{course.title}}</h1>
        <div class="row">

            <div class="col-md-8">
                <img class="img-fluid"
                    src="{{course.imageUrl}}"
                    alt="Express" />
            </div>

            <div class="col-md-4 text-center">
                <h3 class="my-3">Course Description</h3>
                <p>{{course.description}}</p>
                {{#if loggedIn}}
                    {{#if isOwned}}
                        <a class="btn btn-danger" href="/delete/{{course._id}}" id="delete-button">Delete</a>
                        <a class="btn btn-warning" href="/edit/{{course._id}}">Edit</a>
                    {{else}}
                        {{#if isEnrolled}}
                            <span class="enrolled-span">You are already enrolled</span>
                        {{else}}
                            <a class="btn btn-primary" href="/enroll/{{course._id}}">Enroll</a>
                        {{/if}}
                    {{/if}}
                {{/if}}
                
            </div>
        </div>
    </div>
</main>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="../notify.min.js"></script>
<script type="text/javascript" src="../index.js"></script>