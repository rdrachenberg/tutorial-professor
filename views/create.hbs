<main>
    {{#if loggedIn}}
    <form class="text-center border border-light p-5" action="/course/create" method="POST">
        <h1>Create Course</h1>
        <div class="form-group">
            <label for="title">Course Title</label>
            <input type="text" class="form-control" placeholder="Course name" name="title" value="">
        </div>
        <div class="form-group">
            <label for="description">Course Description</label>
            <textarea class="form-control" placeholder="Description" name="description"></textarea>
        </div>
        <div class="form-group">
            <label for="imageUrl">Image url</label>
            <input type="text" class="form-control" placeholder="Image Url" name="imageUrl" value="">
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="check-box" name="isPublic">
            <label class="form-check-label" for="check-box">Public</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    {{else}}
    <a align="center">
        <h3>You must be logged in to create course</h3>
        <a href="/login" align="center">
            <h4>Click here to login</h4>
        </a>
    </a>
    {{/if}}
</main>