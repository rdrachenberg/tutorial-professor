<main>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <img src="https://www.signupsoftware.com/en/assets/Signup-logotype-V1.png" alt="signup" id="signup-img"/>
        </div>
        <div class="col-md-2"></div>
    </div>
    <form class="text-center border border-light p-5" action="/register" method="POST">
        <div class="form-group">
            <label for="username"></label>
            <input type="text" class="form-control" placeholder="Username" name="username" value="" id="register-username">
        </div>
        <div class="form-group">
            <label for="password"></label>
            <input type="password" class="form-control" placeholder="Password" name="password" value="" id="register-password">
        </div>

        <div class="form-group">
            <label for="repeatPassword"></label>
            <input type="password" class="form-control" placeholder="Repeat-Password" name="repeatPassword" value="" id="register-repeat-password">
        </div>

        <button type="submit" class="btn btn-primary" id="register-button">Register</button>
    </form>
</main>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="./notify.min.js"></script>
<script type="text/javascript" src="./index.js"></script>